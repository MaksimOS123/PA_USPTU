<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="194dp"
    android:elevation="10dp">

    <androidx.cardview.widget.CardView

        android:layout_width="350dp"
        android:layout_height="194dp"
        card_view:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/card_student"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Произошли технические шоколадки, обратная сторона карточки на стадии разработки..."
            android:textSize="17dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="40dp"
            android:textAlignment="center"
            android:lineSpacingExtra="-15px"
            android:fontFamily="@font/source_sans_pro_semi_bold"
            android:textColor="#292D32"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Приносим свои извинения за предоставленные неудобства"
            android:textSize="17dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:lineSpacingExtra="-15px"
            android:fontFamily="@font/source_sans_pro_semi_bold"
            android:textColor="#292D32"/>



    </androidx.cardview.widget.CardView>

</FrameLayout>