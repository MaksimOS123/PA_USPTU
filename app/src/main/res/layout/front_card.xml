<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="194dp"
    android:elevation="10dp">

   <androidx.cardview.widget.CardView

       android:layout_width="350dp"
       android:layout_height="194dp"
       card_view:cardCornerRadius="20dp"
       app:cardElevation="0dp"
       app:cardMaxElevation="0dp"
       android:background="@android:color/transparent"
       android:backgroundTint="@android:color/transparent">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/card_student"/>

      <ImageView
          android:layout_width="45dp"
          android:layout_height="45dp"
          android:background="#E3E6EC"
          android:backgroundTint="#E3E6EC"
          android:src="@drawable/logo_usptu_mini"
          android:layout_marginTop="12.5dp"
          android:layout_marginStart="15dp"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:text="УФИМСКИЙ ГОСУДАРСТВЕННЫЙ НЕФТЯНОЙ ТЕХНИЧЕСКИЙ УНИВЕРСИТЕТ"
          android:layout_marginTop="9dp"
          android:layout_marginStart="65dp"
          android:layout_marginEnd="10dp"
          android:maxLines="3"
          android:minLines="3"
          android:fontFamily="@font/source_sans_pro_bold"
          android:gravity="center_vertical"
          android:autoSizeMinTextSize="10dp"
          android:autoSizeMaxTextSize="20dp"
          android:autoSizeStepGranularity="2sp"
          android:autoSizeTextType="uniform"
          android:lineSpacingExtra="-10px"
          android:letterSpacing="0.16"
          android:textColor="#292D32"/>

      <TextView
          android:id="@+id/nspc"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:textSize="18dp"
          android:layout_marginStart="10dp"
          android:layout_marginEnd="10dp"
          android:textAlignment="center"
          android:lineSpacingExtra="-15px"
          android:fontFamily="@font/source_sans_pro_light"
          android:textColor="#292D32"/>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_gravity="left">

         <TextView
             android:id="@+id/nomzachet"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="bottom"
             android:layout_marginBottom="8dp"
             android:layout_marginStart="15dp"
             android:fontFamily="@font/source_sans_pro_semi_bold"
             android:textColor="#292D32"
             android:textSize="14dp"/>

      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_gravity="right">

         <TextView
             android:id="@+id/gruppa"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="bottom"
             android:layout_marginBottom="8dp"
             android:layout_marginEnd="15dp"
             android:fontFamily="@font/source_sans_pro_semi_bold"
             android:textColor="#292D32"
             android:textSize="14dp"/>

      </LinearLayout>

   </androidx.cardview.widget.CardView>

</FrameLayout>