<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="300dp"
    android:background="@drawable/menu"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        card_view:cardCornerRadius="12dp"
        card_view:cardBackgroundColor="@color/Main_Color">

        <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/button_account"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/avatar_student"
            app:civ_border_width="1dp"
            app:civ_border_color="#FF292D32"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            app:layout_row="0"
            app:layout_column="0"/>

        <TextView
            android:id="@+id/button_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:layout_marginTop="1dp"
            android:textColor="@color/dark"
            android:fontFamily="@font/source_sans_pro_semi_bold"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/button_account_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_marginTop="22dp"
            android:textColor="@color/description"
            android:fontFamily="@font/source_sans_pro_semi_bold"
            android:layout_gravity="center_horizontal"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_keyboard_arrow_down"
            android:layout_gravity="right|center_vertical"
            android:layout_marginEnd="5dp"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/ic_book_open_page" />

            <TextView
                android:id="@+id/news_text"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/source_sans_pro_bold"
                android:gravity="center_vertical"
                android:text="Новости"
                android:textColor="@color/dark"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageButton
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/ic_table" />

            <TextView
                android:id="@+id/schedule_text"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/source_sans_pro_bold"
                android:gravity="center_vertical"
                android:text="Расписание"
                android:textColor="@color/dark"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageButton
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/ic_flask" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/source_sans_pro_bold"
                android:gravity="center_vertical"
                android:text="Обучение"
                android:textColor="@color/disabled"
                android:textSize="20dp" />

            <ImageButton
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginStart="97dp"
                android:background="@drawable/ic_keyboard_arrow_down" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/personal_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageButton
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/ic_book_check" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/source_sans_pro_bold"
                android:gravity="center_vertical"
                android:text="Индивид. трек"
                android:textColor="@color/disabled"
                android:textSize="20dp" />

            <ImageButton
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginStart="52dp"
                android:background="@drawable/ic_keyboard_arrow_down" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/achievements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageButton
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/ic_trophy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/source_sans_pro_bold"
                android:gravity="center_vertical"
                android:text="Достижения"
                android:textColor="@color/disabled"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_works"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageButton
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/ic_content_paste" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/source_sans_pro_bold"
                android:gravity="center_vertical"
                android:text="Мои работы"
                android:textColor="@color/disabled"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/payouts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageButton
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/ic_currency_usd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/source_sans_pro_bold"
                android:gravity="center_vertical"
                android:text="Выплаты"
                android:textColor="@color/disabled"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tuition_fees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageButton
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/ic_cash" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/source_sans_pro_bold"
                android:gravity="center_vertical"
                android:text="Оплата обучения"
                android:textColor="@color/disabled"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hostel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageButton
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/ic_home_account" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/source_sans_pro_bold"
                android:gravity="center_vertical"
                android:text="Общежитие"
                android:textColor="@color/disabled"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/workaround"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageButton
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/ic_home_analytics" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/source_sans_pro_bold"
                android:gravity="center_vertical"
                android:text="Обходной"
                android:textColor="@color/disabled"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/electronic_reception"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageButton
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/ic_web" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/source_sans_pro_bold"
                android:gravity="center_vertical"
                android:text="Эл. приемная"
                android:textColor="@color/disabled"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/resources"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageButton
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/ic_file_multiple" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/source_sans_pro_bold"
                android:gravity="center_vertical"
                android:text="Ресурсы"
                android:textColor="@color/disabled"
                android:textSize="20dp" />

            <ImageButton
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginStart="110dp"
                android:background="@drawable/ic_keyboard_arrow_down" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp">


        <ImageButton
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/ic_logout">
        </ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:text="Выйти"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/source_sans_pro_bold"
            android:textColor="@color/dark"/>

    </LinearLayout>



</RelativeLayout>